@using MefistoTheatre.ViewModels.User
@model UserEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit User</h1>

<hr />

<a asp-action="Index" class="btn btn-primary"><i class="fa-solid fa-arrow-left"></i></a>

<div class="row col-md-6 mt-4">
        <form method="post">
            <div class="row g-3">   
                <input asp-for="UserId" type="hidden" />
                <input asp-for="Email" type="hidden" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Email" class="form-control" disabled />
                    <label asp-for="Email" class="form-label"></label>
                </div>
                <div class="form-floating">
                    <input asp-for="Joined" class="form-control" disabled />
                    <label asp-for="Joined" class="form-label"></label>
                </div>
                <div class="form-floating col-md-6">
                    <input asp-for="FirstName" class="form-control"/>
                    <label asp-for="FirstName" class="form-label"></label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating col-md-6">
                    <input asp-for="LastName" class="form-control" />
                    <label asp-for="LastName" class="form-label"></label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="DateOfBirth" class="form-control"  />
                    <label asp-for="DateOfBirth" class="form-label"></label>
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <select asp-for="Role" asp-items="Model.Roles" class="form-select"></select>
                    <label asp-for="Role" class="form-label"></label>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
                    <div class="form-check">
                        <input asp-for="IsSuspended" class="form-check-input" />
                        <label asp-for="IsSuspended" class="form-check-label"></label>
                        <p class="fw-light">Prevent the user from commenting on posts.</p>
                    </div>

            <button type="submit" class="btn btn-primary">Submit</button>
         </div>
    </form>
</div>