@using MefistoTheatre.ViewModels
@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Catogories</h1>

@if(Model.Count() == 0) {
    <h3>Sorry no categories exist.</h3>
} else {
    @foreach (Category category in Model)
    {
        <p>@category.CategoryName <a asp-action="edit" class="btn btn-link">Edit</a></p>
    }

}
<a asp-action="create" class="btn btn-primary">Add Category</a>